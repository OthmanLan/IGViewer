{
  "name": "IG Viewer",
  "description": "Displays IG pictures on Twitter feed.",
  "version": "1.1.0",
  "permissions": [
    "activeTab",
    "https://twitter.com/",
    "https://api.instagram.com/"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_script": {
    "matches": ["http://twitter.com/*", "https://twitter.com/*"],
    "js": ["content_script.js"],
  },
  "browser_action": {
    "default_title": "IG Viewer",
    "default_icon": "icon-off.png"
  },
  "web_accessible_resources": ["style.css"],
  "manifest_version": 2
}